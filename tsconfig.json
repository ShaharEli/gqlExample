{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es6",
    "module": "commonjs",
    "strict": true, 
    "esModuleInterop": true, 
    "outDir": "./build",
    "skipLibCheck": true, 
    "types": [ "node" ],
    "typeRoots" : ["./node_modules/@types", "./src/types"],
    "declaration": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src",
  ],
}
